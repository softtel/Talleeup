
<!DOCTYPE html>
<html>
<head>
  <title>Home login</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<header>

  <div class="page-header">
    <div class="bk-header">
      <div class="bk-top-header">
        <div class="container">
          <div class="navbar-header">
            <%if device_type == :mobile %>
                <%if user_signed_in? %>

                    <a href="/login"><div class="m-logo-header"></div></a>
                <%else%>
                    <a href="/index"><div class="m-logo-header"></div></a>
                <%end%>
            <%else%>
                <%if user_signed_in? %>

                    <a href="/login"><div class="logo-header "></div></a>
                <%else%>
                    <a href="/index"><div class="logo-header "></div></a>
                <%end%>
            <%end%>
          <!--  <%if device_type != :mobile %>ss
                <a href="/home/locations"><div class="home-login-poniter"></div></a>


                <%end%>-->
            <form  action="/search" >
              <%if device_type == :mobile %>
                <div class="m-search-home">
                    <input  type="button"  data-toggle="modal" data-target="#myModalSearch"/>

                </div>
                  <!-- Modal -->
                  <div class="modal fade" id="myModalSearch" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                      <div class="modal-content" style="top:70px">
                        <div class="modal-header">
                          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                          <h4 class="modal-title" id="exampleModalLabel">Search Burgers</h4>
                        </div>
                        <div class="modal-body  loginnnnnn">


                            <div role="tabpanel" class="tab-pane active" id="Email" style="padding-left: 10px;padding-top: 10px">
                              <form action="/search" method="post">
                                <div class="form-group">
                                  <label for="recipient-name" class="control-label">KeyWord:</label>
                                  <input type="text" name="keyword" class="form-control" id="recipient-name">
                                  <span id="error-email" style="color: red"></span>
                                </div>

                              </form>
                              <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                <button type="submit"  class="btn btn-primary">Search</button>

                              </div>
                            </div>

                        </div>

                      </div>
                    </div>
                  </div>
              <%else%>
                <div class="search-home">
                  <input placeholder="search" name="keyword" type="text"/>
                  <input type="submit" class="button-search-submit" value="">
                </div>
               <%end%>
               </form>
            <div class="button-review">
              <%if user_signed_in? %>
                  <a href="/reviewuser">
                    <input type="button" value="REVIEW" name="REVIEW">
                  </a>
              <%else%>
                  <a href="#">
                    <input type="button" value="REVIEW" name="REVIEW" data-toggle="modal" data-target="#checkreview">
                    <!-- Modal -->
                    <div class="modal fade" id="checkreview" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabelggggg" aria-hidden="true">
                      <div class="modal-dialog">
                        <div class="modal-content">
                          <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <h4 class="modal-title" id="exampleModalLabelggggg">Notification</h4>
                          </div>
                          <div class="modal-body loginnnnnn">
                            <p style="color: #666">You must be logged in to review a burger. Please sign-in or create an account</p>
                          </div>

                        </div>
                      </div>
                    </div>
                  </a>
              <%end%>
            </div>

            <div class="button-profile">
              <% if user_signed_in? %>
                  <a href="/userprofile/<%=current_user.id%>">
                    <%= image_tag(@profile.avatar.url(:thumb), :class=>"pull-right img-responsive img-circle",:style=>"width:40px") %>
                  </a>
              <%else%>
                  <a href="#">
                    <%= image_tag("/Uploads/avatar/avatar.png") %>
                  </a>
              <%end%>
            </div>
            <%if user_signed_in? %>
                <%= link_to(image_tag("logout.png"), destroy_user_session_path, :method => :delete, :id=>"btnlogout") %>

            <%end%>
          </div>


        </div>
      </div>
      <div class="bk-content-header">
        <div class="img-bk-content-header">
          <%= image_tag("/images/08.png") %>
        </div>
        <div class="text-bk-content-header">
          <div class="style_select">
            <%= form_tag("/login", method: "post") do %>

            <%= select_tag :city_id, options_for_select(@location.collect {|p| [ p.name, p.id,{style: 'background:transparent;color:#145a8b'} ] }, @city_id), :onchange => "this.form.submit()" %>
            <%end%>
          </div>

        </div>
       <!-- <div class="img-text-bk-content-header"></div>-->
      </div>
    </div>

    <%= form_tag("/login", method: "post",id:"searcformrr") do %>
        <input type="hidden" id="idcitycureent" name="idcitycureent" value="<%=@city_id%>">
        <div class="menu-top-header">
          <div class="container">
            <!--<%if device_type == :mobile %>
            <div class="item-menu-top-header"><a href="#" >Filter </a></div>
            <%else%>
            <div class="item-menu-top-header"><a href="#" >LOCATION </a></div>
            <div class="item-menu-top-header"><a href="#" >BEEF </a></div>

            <div class="item-menu-top-header"><a href="#" >this filter </a></div>
            <div class="item-menu-top-header"><a href="#" >another filter</a> </div>
            <%end%>-->
            <div class="item-menu-top-header" onclick="hovermenu()" ><a href="javascript:void(0)" >Filter</a></div>
            <div class="fiter-line" style="float: left;width: 50px;height: 55px;border-right: 1px solid #ccc;"></div>
            <div class="item-menu-top-header-filter" id="show-data-select">
              <%if @listvalue.present?%>

                  <%@listvalue.each do |item|%>
                      <div class='item-nnnn' id='remove-cate-id-<%=item.id%>'>
                        <div class='cls-input-auto' ><div class='text-select-item'><%=item.name%></div><div onclick='closeritem(<%=item.id%>,"cate")' class='cls-close-menu'>x</div></div>

                      </div>
                  <%end%>
              <%end%>
              <%if @listcutyfilter.present?%>

                  <%@listcutyfilter.each do |item|%>
                      <div class='item-nnnn' id='remove-city-id-<%=item.id%>'>
                        <div class='cls-input-auto' ><div class='text-select-item'><%=item.name%></div><div onclick='closeritem(<%=item.id%>,"city")' class='cls-close-menu'>x</div></div>

                      </div>
                  <%end%>
              <%end%>
            </div>
            <input name="idcomponennt" value="<%=@kk%>" type="hidden" id="listdatata">
          </div>
        </div>
    <%end%>
    <div class="cl"></div>

    <%if @listvalue.present? or @listcutyfilter.present?%>
        <%_show="display:block" %>
    <%else%>
        <%_show="display:none" %>
    <%end%>


    <div class="menu-filter" id="menu-filter" style="<%=_show%>">
      <div class="container">
        <div class="container-menu-filter">
          <%_ko=0%>

              <%_witdht=100%>
              <%if device_type == :mobile %>
                <%_k=_witdht/3%>
              <%else%>
                  <%_k=_witdht/4%>
              <%end%>
              <div class="container-item" style="width: <%=_k%>%">
                <div class="menu-text-file">City</div>
                <div class="menu-item-filter">
                  <%@companonetcity.each do |k|%>
                      <%_select=""%>
                      <%if @listcutyfilter.present?%>
                          <%@listcutyfilter.each do |hokk|%>
                              <% if k.id==hokk.id %>
                                  <% _select='class=check-active-select' %>
                              <%end%>
                          <%end%>
                      <%end%>
                      <div <%=_select%>  onclick="additem(<%=k.id%>,'city')" id="item-component_<%=k.id%>" class="item-nemu-text"><%=k.name%></div>
                  <%end%>
                </div>
              </div>
              <div class="container-item" style="width: <%=_k%>%">
                <div class="menu-text-file">Category</div>
                <div class="menu-item-filter">
                  <%@componant.each do |k|%>
                      <%_selectfd=""%>
                      <%if @listvalue.present?%>
                          <%@listvalue.each do |hokk|%>
                              <% if k.id==hokk.id %>
                                    <% _selectfd='class=check-active-select' %>
                              <%end%>
                          <%end%>
                      <%end%>
                       <div <%=_selectfd%>  onclick="additem(<%=k.id%>,'cate')" id="item-component_<%=k.id%>" class="item-nemu-text"><%=k.name%></div>
                  <%end%>
                </div>
              </div>

              <%if device_type == :mobile %>
                  <%if((_ko+1)%3==0)%>
                      <div class="clearfix"></div>
                  <%end%>
              <%else%>
                  <%if((_ko+1)%4==0)%>
                      <div class="clearfix"></div>
                  <%end%>

              <%end%>
              <%_ko=_ko+1%>



        </div>
        </div>
      </div>
  </div>
</header>
<%= yield %>

</body>
</html>
