<script>
  function addlikecomment(_id)
  {
      var data = {id: _id};

      $.ajax({
          type: "POST",
          url: '/home/addlike',
          contentType: "application/json; charset=utf-8",
          dataType: 'json',
          data: JSON.stringify(data),
          success: function(data, status)
          {
              console.log('success');
          },
          error: function(data, status)
          {
              console.log('error');
          }
      });

  }
</script>