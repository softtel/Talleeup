<div id="main" class="col-md-12">

  <%= render "profileinfo" %>

  <div id="city-filter" class="row center-block">
    BURGERS REVIEWED<span id="total-reviewed">(<%= @products.count %>)</span>
  </div>
  <!-- End city-filter -->

  <div class="row" id="main-body">
    <div id="list-products" class="col-md-12">
      <%= render partial: "product", collection: @products %>
      <%if @products.length>5%>

      <% if !@is_full_list %>
          <a href="/home/userprofile?id=<%= @friend.id %>&fulllist=true">
            <button class="center-block btn-seefull">SEE FULL LIST</button>
          </a>
      <% end %>

<%end%>
    </div>
    <!-- End list-product -->
  </div>
  <!-- End main-body -->

</div>
<!-- End main -->